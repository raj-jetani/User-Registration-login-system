    <script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js"></script>

    <script src="https://cdn.datatables.net/1.11.1/js/dataTables.bootstrap4.min.js" type="text/javascript"></script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet">

    <link href="https://cdn.datatables.net/1.11.1/css/dataTables.bootstrap4.min.css" rel="stylesheet">

    <script>

        $(document).ready(function () {

            $("#dataTable").dataTable();

        });

    </script>


    <style>
        body {
            background-color: rgb(191, 206, 209);
            box-sizing: border-box;
            overflow-x: hidden;
        }

        #navbarSupportedContent {
            margin-left: 20rem;
        }

        li {
            list-style: none;
        }

        .signup {
            margin-left:
                13rem;
        }

        .login {
            margin-left: 1.3rem;
        }

        .logout {
            margin-left: 1.3rem;
        }

        .home {
            margin-right: 2.5rem;
        }

        .heading {
            display: flex;
            align-items:
                center;
            justify-content: center;
            padding: 30px 0 10px 0;
            color: #4e4e52;
        }

        .table {
            border: 1px solid black;
            width: 100%;
        }

        td {
            max-width: 350px;
        }
    </style>


</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/admin">{{username}}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link home" href="/admin">Home
                        <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Pages
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/admin/page">All Pages</a>
                        <a class="dropdown-item" href="/admin/page/add-page">Add Pages</a>
                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Category
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Products
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                    </div>
                </li>

                <li class="signup">
                    <a class="nav-link" href="/register">Register </a>
                </li>

                <li class="login">
                    <a class="nav-link" href="/login">Login </a>
                </li>

                <li class="logout">
                    <a class="nav-link" href="/logout">Logout </a>
                </li>
            </ul>
        </div>
    </nav>

    <h1 class="heading">
        All Pages
    </h1>

    <table class="table table-striped table-bordered" id="dataTable">
        <thead>
            <tr>
                <th>Photo</th>
                <th>Page Url</th>
                <th>Page Navigation</th>
                <th>Page Title</th>
                <th>Page Meta Description</th>
                <th>Page Keyword</th>
                <th>Page Heading</th>
                <th>Page Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each result}}
            <tr>
                <td>
                    {{#if this.pageImage}}
                        <img src="/images/{{this.pageImage}}" width="100px" height="100px">
                    {{else}}
                        <img src="/images/not_found.jpeg" width="100px" height="100px">
                    {{/if}}

                    
                </td>
                <td>{{this.pageUrl}}</td>
                <td>{{this.navDisplayText}}</td>
                <td>{{this.pageTitle}}</td>
                <td>{{this.pageMetaDescription}}</td>
                <td>{{this.pageMetaKeyword}}</td>
                <td>{{this.pageHeading}}</td>
                <td>{{this.pageDetails}}</td>
                <td>
                    <a href="/admin/page/edit-page/{{this.pageUrl}}" class="btn btn-info">Edit</a>
                </td>
                <td>
                    <form action="/admin/page/delete-page/{{this.pageUrl}}?_method=DELETE" method="post" style="display: inline;">
                        <button type="submit" style="cursor: pointer;" class="btn btn-primary">Delete </button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>


    <center><br><a style="margin: 10px;" href="/admin/page/add-page" class="btn btn-success">Add more pages</a>
    </center>
